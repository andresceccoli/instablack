<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidutn.instablack.FiltrosActivity">

    <ImageView
        android:id="@+id/filtros_imagen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/filtros_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/filtro_original"
                android:layout_width="@dimen/miniaturas"
                android:layout_height="@dimen/miniaturas"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/filtro1"
                android:layout_width="@dimen/miniaturas"
                android:layout_height="@dimen/miniaturas"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/filtro2"
                android:layout_width="@dimen/miniaturas"
                android:layout_height="@dimen/miniaturas"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/filtro3"
                android:layout_width="@dimen/miniaturas"
                android:layout_height="@dimen/miniaturas"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/filtro4"
                android:layout_width="@dimen/miniaturas"
                android:layout_height="@dimen/miniaturas"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/filtro5"
                android:layout_width="@dimen/miniaturas"
                android:layout_height="@dimen/miniaturas" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/filtros_continuar"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Continuar" />
</LinearLayout>
